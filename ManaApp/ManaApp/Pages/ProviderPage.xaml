<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManaApp.Pages.ProviderPage">
    <ContentPage.Content>
        <StackLayout Padding="5,0">
            <Label x:Name="nameLabel" Text="No Name" FontSize="Large" FontAttributes="Bold" TextColor="BlueViolet"/>
            <Label Text="Address" FontSize="Medium" TextColor="Black"/>
            <Label x:Name="addressLabel" Text="No address"/>
            <Label Text="Tel." FontSize="Medium" TextColor="Black"/>
            <Label x:Name="phoneNumberLabel" Text="No phone number"/>
            <Label Text="Email" FontSize="Medium" TextColor="Black"/>
            <Label x:Name="emailLabel" Text="No email"/>
            <Button Text="Make an appointment" Clicked="MakeAppointment"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>